# =============================================================================
# dbt Profile Configuration for Snowflake
# =============================================================================
# SETUP INSTRUCTIONS:
# 1. Copy this file to profiles.yml in the project root:
#    cp profiles.yml.example profiles.yml
# 2. Update with your Snowflake credentials (email + database)
# 3. Run `dbt debug` to test the connection
#
# NOTE: profiles.yml is gitignored so your credentials stay private.
# =============================================================================

dbt_learning_sandbox:
  target: dev
  outputs:
    dev:
      type: snowflake
      
      # Slalom Snowflake account
      account: SLALOM-SNOWFLAKE_ILABS_QECATALYST
      
      # Your Snowflake username (your Slalom email)
      user: YOUR_EMAIL@SLALOM.COM
      
      # Your password (use SSO or set up key-pair auth for better security)
      authenticator: externalbrowser  # This enables SSO login
      
      # Role - PUBLIC owns most SALES_DATABASE_* databases
      role: PUBLIC
      
      # Database and warehouse
      # Use your existing SALES_DATABASE_<INITIALS> database
      database: SALES_DATABASE_XX  # Replace XX with your initials (e.g., SALES_DATABASE_GLS)
      warehouse: SALES_LOAD
      schema: RAW
      
      # Number of parallel threads for dbt to use
      threads: 4


